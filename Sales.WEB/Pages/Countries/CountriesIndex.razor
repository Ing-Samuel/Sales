@page "/countries"
@inject IRepository repository;

<h3>Paises</h3>

@if (Countries is null)
{
    <div class="text-center">
        <img class="rounded" src="https://i.pinimg.com/originals/1c/13/f3/1c13f3fe7a6bba370007aea254e195e3.gif" />
    </div>
    
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>País</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Countries)
            {
                <tr>
                    <td>
                        <a class="btn btn-warning">Editar</a>
                        <button class="btn btn-danger">Borrar</button>
                    </td>
                    <td>
                        @country.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>

}


@code {

    public List<Country>? Countries { get; set; }

    //Cuando la página se recarga hay una propiedad que se ejecuta y esa es:
    protected override async Task OnInitializedAsync()
    {
        var responseHttp = await repository.Get<List<Country>>("/api/countries");
        Countries = responseHttp.Response;

    }
}


